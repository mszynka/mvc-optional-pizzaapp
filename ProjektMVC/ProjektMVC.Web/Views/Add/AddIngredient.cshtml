@model ProjektMVC.Web.Models.AddIngredientModel

<h2>Add ingredient</h2>

<form action="/Add/AddIngredient" method="post" class="form-horizontal">
	<div class="form-group">
		@Html.LabelFor(t => t.Name, new { @class = "control-label col-sm-2" })
		<div class="col-sm-10">
			@Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
		</div>
	</div>

	<div class="col-sm-10 col-sm-offset-2">
		<input type="submit" value="Add ingredient" />
	</div>
</form>