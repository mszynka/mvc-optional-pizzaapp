@{
    ViewBag.Title = "Add pizza";
}
@model ProjektMVC.Web.Models.AddPizzaModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />

<h2>Add pizza</h2>

<form action="/Add/AddPizza" method="post" class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(t => t.Name, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Size, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(t => t.Size, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Thickness, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(t => t.Thickness, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Ingredients, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            <select class="js-example-basic-multiple form-control" id="Ingredients" name="Ingredients" multiple="multiple">
                @foreach (var ingredient in Model.IngredientsDictionary)
                {
                    <option value="@ingredient.IngredientId">@ingredient.Name</option>}
            </select>
        </div>
    </div>

    <div class="col-sm-10 col-sm-offset-2">
        <input type="submit" value="Add pizza" />
    </div>
</form>

<script>
    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
    });
</script>