@model ProjektMVC.Data.Models.Pizza
@{
	ViewBag.Title = "Remove pizza";
}

<h2>You are about to remove pizza!</h2>

<form action="/Remove/RemovePizza?pizzaId=@(Model.PizzaId)" method="post" class="form-horizontal">
	<div class="form-group">
		@Html.LabelFor(t => t.Name, new { @class = "control-label col-sm-2" })
		@Html.ValueFor(t => t.Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Size, new { @class = "control-label col-sm-2" })
		@Html.ValueFor(t => t.Size)
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Thickness, new { @class = "control-label col-sm-2" })
		@Html.ValueFor(t => t.Thickness)
	</div>

	<div class="form-group">
		@Html.LabelFor(t => t.Ingredients, new { @class = "control-label col-sm-2" })
		<div>
			<ul name="Ingredients" style="padding-left: 0">
				@foreach (var ingredient in Model.Ingredients)
				{
					<li value="@ingredient.IngredientId" style="list-style-type: none">@ingredient.Ingredient.Name</li>}
			</ul>
		</div>
	</div>

	<div class="col-sm-10 col-sm-offset-2">
		<input type="submit" value="Remove pizza" />
		<input type="reset" onclick="window.location.href='/List/Menu'" value="Cancel"/>
	</div>
</form>
